<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.body %></td>
        <td><button type="button" class="btn btn-primary " style="text-decoration: none"><%= link_to 'Show', todo %></button></td>
        <td><button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_todo_path(todo) %></button></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

